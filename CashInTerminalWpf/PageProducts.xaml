<Page x:Class="CashInTerminalWpf.PageProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="PageProducts"
	  d:DesignHeight="746" d:DesignWidth="1020"
      Background="{StaticResource FormBlueBarGradientBrush}" Height="Auto" Width="Auto" 
      Loaded="PageLoaded" Unloaded="PageUnloaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid x:Name="Grid" Columns="1" VerticalAlignment="Top" Grid.Row="0">
            <Button Style="{StaticResource MenuButtonStyle}" Content="Sample button" />
        </UniformGrid>
        <Label Name="LabelTestVersion"  Grid.Row="2" Content="Тестовая версия!" Foreground="DarkRed" HorizontalAlignment="Center" Style="{StaticResource BigLabelStyle}" />
        <Label Name="LabelTerminal"  Grid.Row="3" Content="" HorizontalAlignment="Right" Style="{StaticResource SmallLabelStyle}" />
    </Grid>
</Page>
