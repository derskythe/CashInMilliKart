            </Button>
            <Button Style="{StaticResource PaymentServiceButtonStyle}">
                <TextBlock TextWrapping="Wrap" Text="Sample button" Style="{StaticResource MainTextBlockStyle}"/>
            </Button>
            <Button Style="{StaticResource PaymentServiceButtonStyle}">
